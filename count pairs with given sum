class Solution{   
public:
    int getPairsCount(int arr[], int n, int k) {
         unordered_map<int,int> m;
       //pair considered as (a,b)
       // a is arr[i],b is k-arr[i]
       int count=0;
       for(int i=0;i<n;i++){
           int b=k-arr[i];//a+b=k-->b=k-a
           
           if(m[b]){
               count=count+m[b]; //adding frequency if b is in map as a was already in map nd if b is also
               //present , it means both a nd b are present that makes a k.
           }
           m[arr[i]]++;
       }
       return count;
    }
};
